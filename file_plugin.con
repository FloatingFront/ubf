+NAME("file_server").

+VSN("ubf1.0").

+INFO("I am a mini file server").

+DESCRIPTION("

Commands:

    'ls'$  List files
    {'get' File} => Length ~ ... ~ | noSuchFile
    
").

+SERVICES().

+TYPE file()     = string().


+STATE start 
       ls                      => {files, [string()]} & start;
       {get, file()}           => binary()            & start
			        | noSuchFile          & stop.



